<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--<ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/user"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:id="@+id/imageView" />-->
    <android.support.v7.widget.CardView
        android:id="@+id/cardimageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp">

        <ProgressBar
            android:id="@+id/snackbar_progress"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="@dimen/activity_horizontal_margin"
            android:layout_height="@dimen/activity_horizontal_margin"
            android:layout_gravity="center"
            android:theme="@style/CircularProgress"/>

        <ImageView
            android:id="@+id/snackbar_image"
            android:layout_width="72dp"
            android:layout_height="96dp"/>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/RelativeLayout"
        android:layout_toRightOf="@+id/cardimageView"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/cardimageView">

        <TextView
            android:text="This is title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#fff"
            android:id="@+id/textView2" />

        <TextView
            android:text="Sample meaage here..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:textColor="#fff"
            android:maxLines="3"
            android:ellipsize="end"
            android:id="@+id/textView3" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/RelativeLayout"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/RelativeLayout">

        <TextView
            android:text="Voir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/textVoir" />

        <TextView
            android:text="Fermer"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textVoir"
            android:textSize="14dp"
            android:textColor="@color/colorSeconde"
            android:id="@+id/textFermer" />

    </RelativeLayout>
</RelativeLayout>